[Unit]
Description=api%i
Requires=docker.service
Requires=postgresql.service
Requires=memcached.service
Requires=redis.service

Before=api-discovery.%i.service
After=etcd.service
After=docker.service
After=postgresql.service
After=memcached.service
After=redis.service

[Service]
EnvironmentFile=/etc/environment
TimeoutStartSec=0
KillMode=none
ExecStartPre=-/usr/bin/docker kill api%i
ExecStart=/usr/bin/docker run --rm\
  -p ${COREOS_PUBLIC_IPV4}:80:80 \
  --link redis-server:redis \
  --link db:db \
  --link memcached-server:memcached-server \
  --name api%i \
  joemocha/api
ExecStop=/usr/bin/docker stop api%i

[Install]
WantedBy=multi-user.target

[X-Fleet]
Conflicts=api@*.service
Conflicts=app@*.service
