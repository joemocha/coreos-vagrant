[Unit]
Description=Announce API@%i service
BindsTo=api@%i.service

[Service]
EnvironmentFile=/etc/environment
ExecStart=/bin/sh -c "while true; do etcdctl set /announce/services/api%i ${COREOS_PUBLIC_IPV4}:%i --ttl 60; sleep 45; done"
ExecStop=/usr/bin/etcdctl rm /announce/services/api%i

[X-Fleet]
X-ConditionMachineOf=api@%i.service
